version: '3.8'

services:
  postgres:
    image: postgres:15-alpine
    container_name: santrac_postgres
    environment:
      POSTGRES_DB: santrac_db
      POSTGRES_USER: santrac_user
      POSTGRES_PASSWORD: CHANGE_THIS_PASSWORD
    volumes:
      - postgres_data:/var/lib/postgresql/data
    ports:
      - "5432:5432"
    healthcheck:
      test: ["CMD-SHELL", "pg_isready -U santrac_user -d santrac_db"]
      interval: 10s
      timeout: 5s
      retries: 5
    networks:
      - santrac_network

  backend:
    build:
      context: ./backend
      dockerfile: Dockerfile
    container_name: santrac_backend
    environment:
      - SANTRAC_CONFIG=/app/config.json
    volumes:
      - ./backend/config.json:/app/config.json:ro
      - backend_logs:/app/logs
      - backend_locks:/app/locks
    ports:
      - "8000:8000"
    depends_on:
      postgres:
        condition: service_healthy
    networks:
      - santrac_network
    restart: unless-stopped
    healthcheck:
      test: ["CMD", "python", "-c", "import requests; requests.get('http://localhost:8000/health')"]
      interval: 30s
      timeout: 10s
      start_period: 40s
      retries: 3

  frontend:
    build:
      context: ./frontend
      dockerfile: Dockerfile
    container_name: santrac_frontend
    ports:
      - "3000:80"
    depends_on:
      - backend
    networks:
      - santrac_network
    restart: unless-stopped

volumes:
  postgres_data:
    driver: local
  backend_logs:
    driver: local
  backend_locks:
    driver: local

networks:
  santrac_network:
    driver: bridge

